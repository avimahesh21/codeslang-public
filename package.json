{
  "name": "codeslang",
  "displayName": "CodeSlang",
  "description": "Transform complex code into easy-to-understand explanations using modern slang, emojis, and simple terms.",
  "publisher": "AvinashMaheshwari",
  "icon": "./codeslang-logo.png",
  "version": "0.11.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/avimahesh21/codeslang-public.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeSlangContainer",
          "title": "CodeSlang",
          "icon": "./lightbulb.svg"
        }
      ]
    },
    "views": {
      "codeSlangContainer": [
        {
          "type": "webview",
          "id": "codeSlang.explainView",
          "name": "CodeSlang"
        }
      ]
    },
    "commands": [
      {
        "command": "codeSlang.explainCode",
        "title": "Explain Code (CodeSlang)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus && !editorReadonly",
          "command": "codeSlang.explainCode",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "openai": "^4.19.0"
  }
}